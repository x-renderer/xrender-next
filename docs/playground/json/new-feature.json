{
  "schema": {
    "type": "object",
    "properties": {
      "html": {
        "title": "html元素的使用",
        "type": "object",
        "properties": {
          "html1": {
            "title": "纯字符串",
            "type": "html",
            "default": "hello world"
          },
          "input": {
            "title": "放在尾部",
            "type": "string",
            "width": "70%"
          },
          "html3": {
            "title": "html",
            "type": "html",
            "default": "<a>注意事项</a>",
            "width": "30%"
          }
        }
      },
      "customItemButtons": {
        "title": "数组item自定义button",
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "a": {
              "title": "简单输入框",
              "type": "string"
            },
            "b": {
              "title": "是否判断",
              "type": "boolean"
            },
            "c": {
              "title": "开关",
              "type": "boolean",
              "widget": "switch"
            }
          }
        },
        "default": [{ "a": "happy", "b": false, "c": false }, {}],
        "props": {
          "foldable": true,
          "itemButtons": [
            {
              "html": "复制",
              "callback": "copyMe"
            }
          ]
        }
      },
      "labelDemo": {
        "title": "标签长度自定义",
        "description": "在object上定义labelWidth会影响所有子元素",
        "type": "object",
        "labelWidth": 200,
        "properties": {
          "inputName": {
            "title": "简单输入框",
            "type": "string"
          },
          "dateName": {
            "title": "时间选择",
            "type": "string",
            "format": "date"
          },
          "colorName": {
            "title": "颜色选择",
            "type": "string",
            "format": "color",
            "labelWidth": 80
          }
        }
      },
      "objectName": {
        "title": "对象",
        "description": "这是一个对象类型",
        "type": "object",
        "properties": {
          "inputDemo": {
            "title": "前后缀",
            "type": "string",
            "rules": [
              { "pattern": "^[A-Za-z0-9]+$", "message": "请输入数字或英文字母" }
            ],
            "width": "50%",
            "props": {
              "addonBefore": "画布长度",
              "addonAfter": "px"
            }
          },
          "numberDemo": {
            "title": "数字",
            "description": "数字输入框",
            "type": "number",
            "min": 10,
            "max": 100,
            "step": 10,
            "width": "50%",
            "widget": "slider"
          },
          "dateRange": {
            "title": "日期范围",
            "type": "range",
            "format": "dateTime",
            "placeholder": ["开始", "结束"]
          }
        }
      },
      "customizedWidgets": {
        "title": "自定义组件",
        "type": "object",
        "properties": {
          "asyncSelect": {
            "title": "异步加载的下拉框",
            "type": "string",
            "labelWidth": 130,
            "widget": "asyncSelect",
            "placeholder": "搜索淘宝商品"
          }
        }
      },
      "complexArray": {
        "title": "复杂结构数组",
        "description": "数组item中含有数组等",
        "type": "array",
        "props": {
          "foldable": true,
          "hideIndex": true
        },
        "items": {
          "type": "object",
          "properties": {
            "age": {
              "title": "填写年龄",
              "type": "number",
              "hidden": "{{rootValue.movieType === 'a' || rootValue.movieType === 'c'}}"
            },
            "movieType": {
              "title": "短片类型",
              "type": "string",
              "enum": ["a", "b", "c"],
              "enumNames": ["教育", "恐怖", "故事"]
            },
            "movieList": {
              "title": "电影列表",
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "movieName": {
                    "title": "电影名",
                    "type": "string"
                  }
                }
              }
            },
            "when": {
              "title": "何时观看",
              "description": "多选",
              "type": "array",
              "items": {
                "type": "string"
              },
              "enum": ["A", "B", "C", "D"],
              "enumNames": ["早上", "中午", "下午", "晚上"]
            }
          },
          "required": ["age"]
        }
      }
    }
  },
  "formData": {
    "html": {
      "html2": "hello from <span style='color: red'>formData</span>!"
    },
    "complexArray": [
      {
        "age": "",
        "movieType": "b",
        "movieList": []
      }
    ]
  }
}
