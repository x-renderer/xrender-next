{
  "schema": {
    "type": "object",
    "properties": {
      "select": {
        "title": "带搜索的单选框",
        "type": "string",
        "enum": ["a", "b", "c"],
        "enumNames": ["jack", "steve", "david"],
        "widget": "select",
        "props": {
          "filterOption": true,
          "showSearch": true,
          "optionFilterProp": "label"
        }
      },
      "multiSelect": {
        "title": "标签模式",
        "description": "除了可选的标签，还可输入自定义的标签",
        "type": "array",
        "enum": ["旅行达人", "工作狂", "老司机", "小资"],
        "widget": "select",
        "props": {
          "mode": "tags"
        }
      }
    }
  }
}
